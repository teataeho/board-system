<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
    
	    <!-- 
	        MyBatis에서 쿼리에 매핑되는 파라미터에 null이 들어가면 에러가 발생합니다.
	        value에 전달할 값이 null일 경우에 처리할 값을 지정하면
	        그 값으로 데이터베이스에 값이 세팅됩니다.
	     -->
        <setting name="jdbcTypeForNull" value="NULL"/>
        
        <!-- 데이터베이스로부터의 응답을 얼마나 오래 기다리게 할 지를 판단하는 타임아웃 설정(밀리초) -->
        <setting name="defaultStatementTimeout" value="3000"/>
        
        <!-- 언더스코어 표기법을 카멜 케이스로 자동 변환하는 설정을 true로 지정. -->
        <!-- ex) reg_date ->regDate -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        
    </settings>
    
    <typeAliases>
        <typeAlias type="com.spring.yeoreobap.command.PartyVO" alias="party"/>
        <typeAlias type="com.spring.yeoreobap.command.StoreVO" alias="store"/>
        <typeAlias type="com.spring.yeoreobap.command.UserVO" alias="user"/>
        <typeAlias type="com.spring.yeoreobap.command.ReviewVO" alias="review"/>
        <typeAlias type="com.spring.yeoreobap.command.PartyReplyVO" alias="pReply"/>
        <typeAlias type="com.spring.yeoreobap.command.ReviewReplyVO" alias="rReply"/>
        <typeAlias type="com.spring.yeoreobap.command.StarVO" alias="star"/>
        <typeAlias type="com.spring.yeoreobap.command.ParticipantsVO" alias="participants"/>
        <typeAlias type="com.spring.yeoreobap.command.FileVO" alias="file"/>
    </typeAliases>
     
</configuration>
