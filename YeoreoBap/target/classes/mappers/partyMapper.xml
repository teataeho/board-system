<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.spring.yeoreobap.party.mapper.IPartyMapper">

	<insert id="regist">
		INSERT INTO party
		(rest_id, writer, title, content, max)
		VALUES (#{restId}, #{writer}, #{title}, #{content}, #{max})
	</insert>
	
	<select id="getList" resultType="party">
		SELECT * 
		FROM party
		ORDER BY party_no DESC
		LIMIT #{pageStart}, #{cpp}
	</select>
	
	<select id="getTotal" resultType="int">
		SELECT COUNT(*)
		FROM party
	</select>
	
	<select id="getArticle" resultType="party">
		SELECT * FROM party
		WHERE party_no = #{partyNo}
	</select>
	
	<update id="update">
		update party
		SET title = #{title}, content = #{content},
		update_date = current_timestamp
		WHERE party_no = #{partyNo}
	</update>
	
	<delete id="delete">
		DELETE FROM party
		WHERE party_no = #{partyNo}
	</delete>
	
	<insert id="attend">
		INSERT INTO participants
		(party_no, user_id)
		VALUES (#{partyNo}, #{userId})
	</insert>
	
	<insert id="upload">
		INSERT INTO img
		(file_name, board_no)
		VALUES (#{fileName}, #{partyNo})
	</insert>

</mapper>