<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.yeoreobap.review.mapper.IReviewMapper">


<sql id="search">
	 	<if test="condition == 'title'">
	 		WHERE r.title LIKE CONCAT('%', #{keyword}, '%')
	 	</if>
	 	<if test="condition == 'writer'">
	 		WHERE r.writer LIKE CONCAT('%', #{keyword}, '%')
	 	</if>
	 	<if test="condition == 'content'">
	 		WHERE r.content LIKE CONCAT('%', #{keyword}, '%')
	 	</if>
	 	<!-- <if test="condition == 'restaurant'">
	 		WHERE s.bplc_nm LIKE CONCAT('%', #{keyword}, '%')
	 	</if> -->
	 	<if test="condition == 'titleContent'">
	 		WHERE r.title LIKE CONCAT('%', #{keyword}, '%')
	 		OR r.content LIKE CONCAT('%', #{keyword}, '%')
	 	</if>
	 </sql>



	<insert id="regist">
		INSERT INTO review
		(password, writer, title, content)
		VALUES (#{password}, #{writer}, #{title}, #{content})
	</insert>
	<!-- regDate, updateDate 삭제 -->
	<select id="getList" resultType="review">
		SELECT ROW_NUMBER() OVER (ORDER BY r.review_no) AS rn, r.*
		FROM review r
		<include refid="search" />
		ORDER BY r.review_no DESC
		LIMIT #{pageStart}, #{cpp}
	</select>
	
	<select id="getList2" resultType="review">
		SELECT *
		FROM review
		ORDER BY review_no DESC
		LIMIT 0, 5
	</select>
	
	<select id="getTotal" resultType="int">
		SELECT COUNT(*)
		FROM review
		<include refid="search" />
	</select>
	
	<select id="getContent" resultType="review">
		SELECT *
		FROM review
		WHERE review_no = #{reviewNo}
	</select>
	
	<update id="update">
		UPDATE review
		SET title = #{title}, content = #{content},
		update_date = current_timestamp
		WHERE review_no = #{reviewNo}
	</update>
	
	<delete id="delete">
		DELETE FROM review
		WHERE review_no = #{reviewNo}
	</delete>
	
	<select id="checkPw" resultType="int">
		SELECT COUNT(*)
		FROM review
		WHERE review_no = #{reviewNo} AND password = #{password}
	</select>
	
